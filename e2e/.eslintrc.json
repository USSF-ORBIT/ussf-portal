{
  "env": {
    "node": true
  },
  "plugins": ["@typescript-eslint", "security"],
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "plugin:playwright/playwright-test"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "assert",
          "clear",
          "count",
          "countReset",
          "debug",
          "dir",
          "dirxml",
          "error",
          "group",
          "groupCollapsed",
          "groupEnd",
          "info",
          "profile",
          "profileEnd",
          "table",
          "time",
          "timeEnd",
          "timeLog",
          "timeStamp",
          "trace",
          "warn"
        ]
      }
    ]
  }
}
